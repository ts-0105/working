<div class='chat-room-form'>
  <h1>新規チャットルーム</h1>
  <%= form_with model: @room, local: true do |f| %>
    <div class='chat-room-form__field'>
      <div class='chat-room-form__field--left'>
        <%= f.label :name, 'チャットルーム名', class: 'chat-room-form__label' %>
      </div>
      <div class='chat-room-form__field--right'>
        <%= f.text_field :name, class: 'chat__room_name chat-room-form__input', placeholder: 'チャットルーム名を入力してください' %>
      </div>
    </div>
    <div class='chat-room-form__field'>
      <div class='chat-room-form__field--left'>
        <%= label_tag 'room_user_ids[]', 'チャットメンバー', class: 'chat-room-form__label' %>
      </div>
      <div class='chat-room-form__field--right'>
  <% @users.each do |user| %>
    <%= check_box_tag "room[user_ids][]", user.id %>
    <%= label_tag "room_user_#{user.id}", user.name %><br>
  <% end %>
</div>
    </div>
    <div class='chat-room-form__field'>
      <div class='chat-room-form__field--left'></div>
      <div class='chat-room-form__field--right'>
        <%= check_box_tag 'include_self', '1', false, id: 'include_self' %>
        <%= label_tag 'include_self', '自分自身を含める' %>
      </div>
    </div>
    <div class='chat-room-form__field'>
      <div class='chat-room-form__field--left'></div>
      <div class='chat-room-form__field--right'>
        <%= f.submit '作成', class: 'chat-room-form__action-btn' %>
      </div>
    </div>
  <% end %>
</div>